<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/usernameCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Created by" />

    <LinearLayout
        android:layout_below="@+id/usernameCaption"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/RowRequestImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_account_circle_black_36dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RowRequestUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As Requester"/>

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/favorite_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/RowRequestRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:layout_alignBottom="@+id/favorite_button"
                    android:layout_alignRight="@+id/favorite_button"
                    android:layout_alignEnd="@+id/favorite_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/middleLayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:orientation="vertical">

        <include layout="@layout/separator_grey" />

        <TextView
            android:id="@+id/RowRequestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/RowRequestDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:orientation="horizontal"
        android:layout_below="@+id/middleLayout">

        <Button
            android:id="@+id/RowRequestContact"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="Contact"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/RowRequestHide"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="Hide"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>
</RelativeLayout>