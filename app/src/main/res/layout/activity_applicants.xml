<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myneighbourhood.Kiril_Hristov.Applicants"
    android:background="@color/colorBackground">



    <LinearLayout
        android:layout_below="@+id/ReqActUserSectionSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/ReqActTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="center_horizontal"
        android:text = "Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ReqActDescription"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text = "request text"
        />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/ReqActExpiresCaption"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Expires at: " />


        <TextView
            android:id="@+id/ReqActExpires"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "date" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/ReqActPeopleNeededCaption"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "People needed: " />


        <TextView
            android:id="@+id/ReqActPeopleNeeded"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "number" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
